<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="Fluke.org.project3.MainActivity$PlaceholderFragment" >

    <LinearLayout
        android:id="@+id/join_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:background="#aaAFEEEE"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/join_before"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="0.2"
            android:background="#aaAFEEEE"
            android:src="@drawable/abc_ic_ab_back_holo_dark" />

        <TextView
            android:id="@+id/join_title_text"
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_weight="0.6"
            android:background="#aaAFEEEE"
            android:gravity="center"
            android:text="Join"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="20dp" />

        <Button
            android:id="@+id/join_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="#aaAFEEEE"
            android:text="ok" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/email_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/email_text"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:padding="15dp"
            android:text="이메일" />

        <EditText
            android:id="@+id/email_edit"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:inputType="textEmailAddress" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/password_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_layout"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/password_text"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:padding="15dp"
            android:text="password" />

        <EditText
            android:id="@+id/password_edit"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:ems="10"
            android:inputType="textPassword" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/re_password_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_layout"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/re_password_text"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:padding="15dp"
            android:text="password" />

        <EditText
            android:id="@+id/re_password_edit"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:inputType="textPassword" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sex_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re_password_layout"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/sex_text"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:padding="15dp"
            android:text="sex" />

        <RadioGroup
                android:id="@+id/sex_group"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/sex_man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Man" />


                <RadioButton
                    android:id="@+id/sex_woman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Woman" />
            </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/nic_name"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:padding="15dp"
            android:text="닉네임" />

        <EditText
            android:id="@+id/nic_name_edit"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:inputType="textEmailAddress" />
    </LinearLayout>

</LinearLayout>