<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fluke.org.project3.MainActivity$PlaceholderFragment" >

        
    <LinearLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"

        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/login_before"
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
             android:background="#aaAFEEEE"
            android:src="@drawable/abc_ic_ab_back_holo_dark" />
        <TextView
            android:id="@+id/login_title_text"
            android:gravity="center"
            android:layout_weight="0.6"
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:text="Login"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="20dp"
            android:background="#aaAFEEEE" />

        <Button
            android:id="@+id/login_ok"
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#aaAFEEEE"
            android:text="ok" />
    </LinearLayout>
  
    <LinearLayout
        android:id="@+id/login_email_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/login_email_layout"
        android:layout_below="@+id/login_logo"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/login_email_edit"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:inputType="textEmailAddress" 
            android:hint="         이메일">

            <requestFocus />
        </EditText>

    </LinearLayout>
    
  <LinearLayout
        android:id="@+id/login_password_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/login_email_layout"
        android:orientation="vertical"
         >
        
        <EditText
            android:id="@+id/login_password_edit"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="textPassword"
            android:hint="         비밀번호" >

        </EditText>
    </LinearLayout>

  <ImageView
      android:id="@+id/login_logo"
      android:layout_width="250dp"
      android:layout_height="250dp"
      android:layout_below="@+id/title_bar"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="20dp"
      android:src="@drawable/ic_logo" />

</RelativeLayout>