                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:background="#aaAFEEEE"
                    android:text="강원"
                    android:textSize="12dp" />

                <Button
                    android:layout_width="50dp"
