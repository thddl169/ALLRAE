                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="pension" />
                    </TableRow>

                    <TableRow>

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="etc" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/openBtn01"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#50C0C0C0"
            android:text="상세검색" />
    </LinearLayout>
  
    <LinearLayout
        android:id="@+id/search_destination_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/login_email_layout"
        android:layout_below="@+id/login_logo"
        android:orientation="horizontal" >

       
         <TextView
            android:id="@+id/search_destination_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="여행지로 검색" />
           
        <EditText
            android:id="@+id/search_destination_edit"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:inputType="textEmailAddress" 
            >

            <requestFocus />
        </EditText>

