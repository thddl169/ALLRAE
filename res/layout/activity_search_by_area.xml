                    <TableRow>

                        <Button
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:layout_margin="2dp"
                            android:background="#aaAFEEEE"
                            android:text="충북"
                            android:textSize="12dp" />
                    </TableRow>
