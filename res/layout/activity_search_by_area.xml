                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="1인당 비용" />

                <Spinner
                    android:id="@+id/mySpinner1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:prompt="@string/pay" />
            </LinearLayout>

            <LinearLayout
