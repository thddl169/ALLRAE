<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button_previous"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="#aaAFEEEE"
            android:text="@string/button_previous" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_weight="0.6"
            android:background="#aaAFEEEE"
            android:gravity="center"
            android:text="@string/basic_info"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="#aaAFEEEE"
            android:text="@string/button_next" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/text_write_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text_write_title" >
            </TextView>

            <EditText
                android:id="@+id/write_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="@string/hint_write_title"
                android:inputType="textMultiLine" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/text_write_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text_write_date" >
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/text_write_season" />

            <RadioGroup
                android:id="@+id/radiogroup_season_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/radio_write_season_spring"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/radio_write_season_spring"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/radio_write_season_summer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/radio_write_season_summer"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/radio_write_season_fall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/radio_write_season_fall"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/radio_write_season_winter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/radio_write_season_winter"
                    android:textSize="14sp" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/text_write_countpeople"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text_write_countpeople" >
            </TextView>

            <EditText
                android:id="@+id/write_countpeople"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:inputType="number" >

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/text_write_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text_write_people" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/text_write_maintransfer"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:text="@string/text_write_maintransfer" >
            </TextView>


                <RadioGroup
                    android:id="@+id/radiogroup_move_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="4"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/radio_write_maintrasfer_car"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/radio_write_maintrasfer_car"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/radio_write_maintrasfer_public"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/radio_write_maintrasfer_public"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/radio_write_maintrasfer_walk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/radio_write_maintrasfer_walk"
                        android:textSize="14sp" />
                </RadioGroup>
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <TextView
                android:id="@+id/text_write_departure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text_write_departure" >
            </TextView>

            <RadioGroup
                android:id="@+id/radiogroup_area_table"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/button_write_departure01"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:text="@string/button_write_departure01"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/button_write_departure02"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:text="@string/button_write_departure02"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/button_write_departure0"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:text="@string/button_write_departure03"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/button_write_departure04"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:text="@string/button_write_departure04"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/button_write_departure05"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:text="@string/button_write_departure05"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/button_write_departure06"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:text="@string/button_write_departure06"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/button_write_departure07"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:text="@string/button_write_departure07"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/button_write_departure08"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:text="@string/button_write_departure08"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/button_write_departure09"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:text="@string/button_write_departure09"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/button_write_departure10"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:text="@string/button_write_departure10"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/button_write_departure11"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:text="@string/button_write_departure11"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/button_write_departure12"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:text="@string/button_write_departure12"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/button_write_departure13"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:text="@string/button_write_departure13"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/button_write_departure14"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:text="@string/button_write_departure14"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/button_write_departure15"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:text="@string/button_write_departure15"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/button_write_departure16"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:text="@string/button_write_departure16"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/button_write_departure17"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:text="@string/button_write_departure17"
                        android:textSize="12sp" />
                </LinearLayout>
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>